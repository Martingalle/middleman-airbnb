
<div id="team">
  <div class="team-content">
    <h1>Team of the year</h1>
    <ul class="list-inline">
      <% data.team.each do |team_member| %>
        <li>
          <% link_to "https://kitt.lewagon.com/alumni/#{team_member.github_nickname}", target: "_blank" do %>
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{team_member.github_nickname}", class: "img-circle" %>
          <% end %>
          <h2><%= team_member[:name] %></h2>

          <p>
            <% link_to "https://github.com/#{team_member.github_nickname}", target: "_blank" do %>
              <i class="fa fa-github"></i> <%= team_member.github_nickname %>
            <% end %>
          </p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
